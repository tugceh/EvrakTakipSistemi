
@{
    ViewBag.Title = "Takip";
    Layout = "~/Views/Shared/_LayoutKullanici.cshtml";
}

<h2>Takip</h2>

<div class="container">
    <div class="jumbotron">
        @using (Html.BeginForm("Takip", "Kullanici", FormMethod.Post))
        {
            <select id="selectEvrak" name="selectEvrak">
                @foreach (var item in ViewBag.evraklar)
                {
                    <option value="@item.evrakId">@item.evrakAd</option>
                }
            </select>
            <br />
            <button type="submit" class="btn btn-dark">Getir</button>
        }
    </div>
</div>

