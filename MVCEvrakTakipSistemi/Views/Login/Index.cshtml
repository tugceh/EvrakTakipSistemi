    <link rel="canonical" href="https://getbootstrap.com/docs/4.3/examples/sign-in/">

    <!-- Bootstrap core CSS -->
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Content/signin.css" rel="stylesheet" />
</head>
<body class="text-center">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-signin" }))
    {

        <h1 class="h3 mb-3 font-weight-normal">Lütfen Giriş Yapınız</h1>

        <label for="kullaniciAd" class="sr-only">Kullanıcı Adı</label>
        <input type="text" id="kullaniciAd" class="form-control" placeholder="Kullanıcı Ad" name="kullaniciAd" required autofocus>

        <label for="parola" class="sr-only">Parola</label>
        <input type="password" id="parola" class="form-control" placeholder="Parola" name="parola" required>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Giriş</button>
    }
    
</body>
</html>
