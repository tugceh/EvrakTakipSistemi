
@{
    ViewBag.Title = "HataGonder";
    Layout = "~/Views/Shared/_LayoutKullanici.cshtml";
}

<h2>HataGonder</h2>

<div class="container">
    <div class="card">
        @using (Html.BeginForm("HataGonder", "Kullanici", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <div class="card-body">
            <div class="form-group">
                <label for="evrakAd">Evrak Adı</label>
                <input type="text" class="form-control" id="evrakId" name="evrakId" value="@ViewBag.evrak.evrakAd" />
                <input type="hidden" id="evrakAd" name="evrakAd" value="@ViewBag.evrak.evrakId" />
            </div>
            <div class="form-group">
                <label for="yuklenecekDosya">Evrak</label>
                <input type="file" class="form-control-file" id="yuklenecekDosya" name="yuklenecekDosya" />
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Gönder</button>
        </div>
        }
    </div>
</div>
